@model MatchViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-controller="Match" asp-action="EditMatch" method="post" class="form-horizontal" role="form">

    <div class="form-group">
        <input asp-for="MatchId" value="@Model.MatchId" type="hidden" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="MatchDate"><strong>Date</strong></label>
        <input asp-for="MatchDate" value="@Model.MatchDate" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="HomeTeam"><strong>Home team</strong></label>
        <input asp-for="HomeTeam" value="@Model.HomeTeam" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="HomeTeamScore"><strong>Home team goals</strong></label>
        <input asp-for="HomeTeamScore" value="@Model.HomeTeamScore" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="AwayTeamScore"><strong>Home team goals</strong></label>
        <input asp-for="AwayTeamScore" value="@Model.AwayTeamScore" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="AwayTeam"><strong>Away team</strong></label>
        <input asp-for="AwayTeam" value="@Model.AwayTeam" type="text" class="form-control">
    </div>
    <div class="col-sm-1">
        <label asp-for="MatchStatus"><strong>Status:</strong></label>
        <div class="row">
            <select name="MatchStatus">
                <option value="upcoming">upcoming</option>
                <option value="ongoing">ongoing</option>
                <option value="canceled">canceled</option>
                <option value="finished">finished</option>
            </select>
        </div>
    </div>
    <p></p>

    <div class="form-group">
        <div class="btn-group col-md-offset-2 col-md-6">
            <input class="btn btn-primary" type="submit" name="" value="Update" />
        </div>
    </div>
</form>